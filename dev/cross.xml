<?xml version="1.0" encoding="UTF-8"?>

<ling-resources>
   <name>My linguistic resources</name>
   <description>My linguistics resources: morphological and bilingual dictionaries, cross models, corpora, etc.</description>
  
   <resource-set>

      <name>My linguistic resources to get Breton-Spanish language pair.</name>
      <description>Morphological and bilingual dictionaries.</description>

      <!-- cross model en-es-it -->
      <resource>
         <property name="name" value="cross-model-br-fr-es"/>
         <property name="type" value="cross-model"/>
         <property name="sl" value="fr"/>
         <property name="tl" value="pt"/>      
         <property name="for-crossing" value="yes"/>
         <property name="src" value="dev/cross-model-fr-es-pt.xml"/>
      </resource>
     
      <!-- cross model it-es-en -->
      <resource>
         <property name="name" value="cross-model-es-fr-br"/>
         <property name="type" value="cross-model"/>
         <property name="sl" value="es"/>
         <property name="tl" value="pt"/>      
         <property name="for-crossing" value="yes"/>
         <property name="src" value="cross-model.xml"/>
      </resource>
     
      <!-- 'en' morphological dictionary -->
      <resource>
         <property name="name" value="apertium-ca"/>
         <property name="type" value="mon"/>
         <property name="sl" value="fr"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-fr-pt.fr.metadix"/>
      </resource>

      <!-- 'it' morphological dictionary -->
      <resource>
         <property name="name" value="apertium-it"/>
         <property name="type" value="mon"/>
         <property name="sl" value="pt"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-fr-pt.pt.dix"/>
      </resource>

      <!-- 'en-es' bilingual dictionary -->
      <resource>
         <property name="name" value="apertium-es-ca"/>
         <property name="type" value="bil"/>
         <property name="sl" value="fr"/>
         <property name="tl" value="es"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-fr-es.fr-es.dix"/>
      </resource>
      
      <!-- 'es-it' bilingual dictionary -->   
      <resource>
         <property name="name" value="apertium-es-it"/>
         <property name="type" value="bil"/>
         <property name="sl" value="es"/>
         <property name="tl" value="pt"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-es-pt.es-pt.dix"/>
      </resource>
     
   </resource-set>
   
</ling-resources>
